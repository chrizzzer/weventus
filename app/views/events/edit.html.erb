<h1>Editing article</h1>

<%= form_for :event, url: event_path(@event), method: :patch do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :category %><br>
  <%= f.text_field :category %>
</p>
<p>
  <%= f.label :place %><br>
  <%= f.text_field :place %>
</p>
<p>
  <%= f.label :price %><br>
  <%= f.number_field :price %>
</p>
<p>
  <%= f.label :date %><br>
  <%= f.date_field :date %>
</p>
<p>
  <%= f.label :time %><br>
  <%= f.time_field :time %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', event_path %>
